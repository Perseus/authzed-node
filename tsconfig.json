{
  "compilerOptions": {
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "rootDir": "./",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "src/authzedapi/authzed/api/v0"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.*/*"
  ]
}